{% extends 'base.html.twig' %}

{% block title %}Mes commandes!{% endblock %}

{% block content %}
     <h1>Mes commandes</h1>
    C'est dans cet espace que vous aller gerer toutes vos commandes
    <hr>
    <a href="{{ path('app_acccount') }}">  - Retour </a><br/>

    {% if orders|length == 0 %}
        <p class="text-center">
            Vous n'avez pas encore passé de commande dans la boutique
        </p>
    {% else %}


                <table class="table table-striped mt-3 ">
                    <thead>
                    <tr>
                        <th scope="col">Reference</th>
                        <th scope="col">Passée le</th>
                        <th scope="col">Produits</th>
                        <th scope="col">Total</th>
                        <th scope="col">Voir</th>
                    </tr>
                    </thead>
                    <tbody>
        {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.createdAt|date('d/m/y') }}</td>
                        <td>{{ order.orderDetails|length }}</td>
                        <td>{{ (order.carrierPrice + order.getTotal) }}</td>
                        <td class="text-right"><a href="{{ path('app_acccount_order_show', {'id': order.id} ) }}">Voir ma commande</a></td>
                    </tr>
        {% endfor  %}
                    </tbody>
                </table>





    {% endif  %}
{% endblock %}
