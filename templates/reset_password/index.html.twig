{% extends 'base.html.twig' %}

{% block title %}Mot de passe oubli√© !{% endblock %}

{% block content %}


    <div class="block-small">

        <form method="post">

            <h1 class="h3 mb-3 font-weight-normal">Reinitialiser mon mot de passe</h1>
            <label for="inputEmail">Votre Email</label>
            <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Votre adresse email" required autofocus>


            <button class="btn btn-lg btn-info btn-block mt-3" type="submit">
                Valider
            </button>
            <hr>

            <p class="text-center">Ou souhaitez-vous <a href="{{ path('app_login') }}">vous connecter ?</a></p>
        </form>
    </div>
{% endblock %}
