{% extends 'base.html.twig' %}

{% block title %}{{ produit.nom }}{% endblock %}

{% block content %}

    <div class="row" >
       <div class="col-md-5">
            <img src="/uploads/{{ produit.illustration }}" alt="{{ produit.nom }}" class="img-fluid"  />
       </div>
        <div class="col-md-7 my-auto">
            <h3>{{ produit.nom}}</h3>
            <p>{{ produit.subtitle}}</p>
            {{ produit.price /100}}
            <hr>
            <p>
            {{ produit.description}}
            </p>
           <a href="{{ path('add_to_cart', {'id' : produit.id}) }}" class="btn btn-primary">Ajouter au panier</a>

        </div>
    </div>
    <hr>

    <h3>Nos Meilleures ventes</h3>
    <p>Decouvrez les articles les plus vendus.</p>
    <div class="row">
        {% for produit in Produits %}
            <div class="col-md-3">
                {% include'produits/single_product.html.twig' %}
            </div>
        {% endfor %}
    </div>

{% endblock %}