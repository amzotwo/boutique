{% extends 'base.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block content %}
<h3>Nos Produits</h3>
    <div class="row">
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <div class="row product-container" >
                {% for produit in Produits %}
                    <div class="col-md-4">
                        <div class="produit-item text-center">
                            <a href="{{ path('app_produit',{'slug':produit.slug}) }}"> <img src="/uploads/{{ produit.illustration }}" alt="{{ produit.nom }}" class="img-fluid"/></a>
                            <h5>{{ produit.nom }}</h5>
                            <span class="product-subtitle">{{ produit.subtitle }}</span>
                            <p class="product-price">{{ produit.price /100 }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}
